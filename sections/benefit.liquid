<div class="Main-benefit-section" id="{{ section.id }}">
  <div class="Min-container">
    <header class="heading-cls">
      <h2 class="h2-heading">{{ section.settings.heading }}</h2>
    </header>
    <div class="main-flef-block">
      {% for block in section.blocks %}
        <div class="First-block">
          <div class="img-cls-section">
            <img src="{{ block.settings.image | img_url: 'master' }}">
          </div>
          <div class="img-heading-section">
            <h2 class="image-head"  style="font-size:{{block.settings.image_right}}px">{{ block.settings.title }}</h2>
          </div>
        </div>
        {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Benefit Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "bg-color",
        "type" : "color",
        "label" : "Background Color",
        "default" : "#fff"
      }
    ],
    "blocks" : [
      {
        "name" : "block",
        "type" : "block",
        "settings" : [
          {
            "id" : "image",
            "type" : "image_picker",
            "label" : "Image"
          },
          {
            "id" : "title",
            "type" : "text",
            "label" : "Heading"
          },
          {
          "type": "range",
          "id": "image_right",
          "label": "Title fontsize",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 14,
          "unit": "px"
        }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Benefit Section"
      }
    ]
  }
{% endschema %}

<style>
  .Main-benefit-section{
    background: {{section.settings.bg-color}};
  }
</style>
