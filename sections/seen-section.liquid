<div class="seen-section-main" id="{{ section.id }}">
  <div class="Seen-sections">
    <header class="header-seen">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <p class="text">{{ section.settings.text }}</p>
    </header>
    <div class="flex-seens">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
        <div class="images-seen">
          <a href="{{ block.settings.img-link }}">
            <img src="{{ block.settings.image | img_url:'master' }}">
          </a>
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Seen Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "text",
        "type" : "textarea",
        "label" : "Text"
      },
      {
        "id" : "bg-color",
        "type" : "color",
        "label" : "Background Color",
        "default" : "#efefef"
      }
    ],
    "blocks" : [
      {
        "name" : "block",
        "type" : "block",
        "settings" : [
          {
            "id" : "image",
            "type" : "image_picker",
            "label" : "Image"
          },
          {
            "id" : "img-link",
            "type" : "url",
            "label" : "Url"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Seen Section"
      }
    ]
  }
{% endschema %}

<style>

  #{{ section.id }}{
    background: {{section.settings.bg-color}};
  }
  .Seen-sections {
 padding: 2% 5% 4%;
    max-width: 1900px;
    width: 100%;
    margin: auto;
        background-color: #F9F9F9;

    
}
  .flex-seens{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    justify-content: start;
    margin-top: 3rem;
    border-top: 1px solid #D4D4D4;
  }
  .images-seen {
    width: 25%;
       padding: 2% 8%;
    border-bottom: 1px solid #D4D4D4;
    display: flex;
    align-items: center;
}
  .images-seen img {
    width: 100%;
}
  .header-seen h2.heading {
    font-family: 'Gazpacho';
    font-style: normal;
    font-weight: 700;
    font-size: 35px;
    line-height: 42px;
    text-align: center;
    color: #000000;
    margin: 0;
}
  .header-seen p.text {
    font-family: 'TT Norms Pro';
    font-style: normal;
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    text-align: center;
    letter-spacing: -0.03em;
    color: #000000;
    margin: 10px 0;
}
  @media(max-width: 768px){
    .images-seen {
    width: 50%;
      padding: 2% 10%;
}
    .header-seen h2.heading {
    font-size: 25px;
    line-height: 32px;
}
  .header-seen p.text {
    font-size: 18px;
    line-height: 24px;
}
  }
</style>