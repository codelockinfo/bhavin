<div class="Main-result-section" id="{{ section.id }}">
  <div class="Result-section">
    <header class="result-head">
      <h2 class="heading">{{ section.settings.heading }}</h2>
      <p class="text">{{ section.settings.text }}</p>
    </header>
    <div class=" Main-slider-flex multiple-items">
      {% for block in section.blocks %}
        {% if block.settings.option-select == '2' %}
          {% if block.settings.image != blank %}
          <div class="main-blocks">
            <div class="content-result">
              <img src="{{ block.settings.image | img_url:'master' }}">
            </div>
          </div>
            {% endif %}
        {% endif %}
        {% if block.settings.option-select == '1' %}
          <div class="main-blocks">
            <div class="content-result">
              <iframe src="https://www.youtube.com/embed/{{block.settings.video |  split: "=" | last }}"  frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Result Section",
  "settings": [
    {
      "id" : "heading",
      "type" : "text",
      "label" : "Heading"
    },
    {
      "id" : "text",
      "type" : "textarea",
      "label" : "Text"
    },
    {
      "id" : "bg-color",
      "type" : "color",
      "label" : "Background Color",
      "default" : "#fff"
    }
  ],
  "blocks" : [
    {
      "name" : "block",
      "type" : "block",
      "settings" : [
        {
          "id" : "image",
          "type" : "image_picker",
          "label" : "Image"
        },
        {
          "id" : "video",
          "type": "video_url",
          "accept": ["youtube", "vimeo"],
          "label" : "Video"
        },
        {
      "type": "select",
      "id": "option-select",
      "default": "2",
      "options": [
       {
          "value": "1",
          "label": "Video"
       },
       {
          "value": "2",
          "label": "Image"
        }
      ],
      "label": "Sub Text use font:"
    }
      ]
    }
  ],
  "presets" : [
    {
      "name" : "Result Section"
    }
  ]
}
{% endschema %}


