<div class="main-merquee-section" id="{{ section.id }}">
  <div class="Merquee-srctions">
    {% if section.settings.heading != blank %}
    <div class="slider">
      <div class="slide-track">
        <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>

        <!-- same 9 slides doubled (duplicate) -->
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
         <div class="">{{ section.settings.heading }}</div>
      </div>
    </div>
      {% endif %}
    {% if section.settings.image != blank %}
    <div class="image-position rmotepilling">
      <a href="{{ section.settings.image-link }}">
        <img class=" "  src="{{ section.settings.image | img_url: 'master' }}" id="winlogo">
      </a>
    </div>
      {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Merquee Section",
    "settings": [
      {
        "id" : "heading",
        "type" : "text",
        "label" : "Heading"
      },
      {
        "id" : "heading-width",
        "type" : "text",
        "label" : "Heading Size",
        "default" : "150px"
      },
       {
        "id" : "mobile-heading-width",
        "type" : "text",
        "label" : "Mobile Heading Size",
        "default" : "80px"
      },
      {
        "id" : "image",
        "type" : "image_picker",
        "label" : "Image"
      },
      {
        "id" : "image-link",
        "type" : "url",
        "label" : "Image Link"
      },
      {
        "id" : "bg-color",
        "type" : "color",
        "label" : "Background Color"
      },
           {
        "id" : "clrmer",
        "type" : "color",
        "label" : "Marquee Color"
      }
    ],
    "presets" : [
      {
        "name" : "Merquee Section"
      }
    ]
  }
{% endschema %}

<style>

  #{{ section.id }} .Merquee-srctions .slide-track {
    background: {{section.settings.bg-color}};
    padding: 5px;
}
  .slide-track div {
    font-family: 'TTNormsProNormal';
    font-style: normal;
    font-weight: 900;
    font-size: 24px;
    line-height: 27px;
    text-align: center;
    color: {{section.settings.clrmer}};

  }
  .image-position img {
    max-width: 160px;
    width: 100%;
}
  .image-position {
    position: absolute;
    opacity: 1;
    z-index: 2;
    left: 5%;
}
  .Merquee-srctions {
    display: flex;
    width: 100%;
    align-items: center;
}
  .Merquee-srctions .slider {
    width: 100%;
    overflow: hidden;
}
  
/*   codepen css start */

  .slider::before{
  left:0;
  top:0;
}
.slider::after{
  right:0;
  top:0;
  transform:rotateZ(180deg);
}

/*  IMPORTANT CODE BELOW */

#{{ section.id }} .slide-track {
  width: calc({{section.settings.heading-width}} * 25);
  display: flex;
  animation: scroll 20s linear infinite;
  justify-content: space-between;
}


.slide {
  width: 150px;
  height: 60px;

  display: grid;
  place-items: center;
  transition:0.5s;
  cursor:pointer;
}
.slide:hover{
  transform:scale(0.8)
}

@keyframes scroll {
  0% {
    transform: translateX(0px);
  }
  100% {
    transform: translateX(calc(-150px * 10));
  }
}


@media screen and (max-width: 768px) {
  #{{ section.id }} .slide-track {
    width: calc( {{section.settings.mobile-heading-width}}; * 33);
  }

  .slide {
    width: 80px;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0px);
    }
    100% {
      transform: translateX(calc(-80px * 10));
    }
  }

 }
@media(max-width:600px){
  .image-position{
    display: none;
  }
}
</style>

<script>
window.onscroll = function() {
        var theta = document.documentElement.scrollTop / 60 % Math.PI;

document.getElementById('winlogo').style.transform ='rotate(' + theta + 'rad)';
}
</script>
